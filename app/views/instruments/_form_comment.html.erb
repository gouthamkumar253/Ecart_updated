<div class="columns">
  <div class="column is-8 is-centered">
    <%= simple_form_for Comment.new, html: { multipart: true } do |f| %>
      <%= f.error_notification %>
          
		    
				<%= hidden_field_tag "instrument_id", @instrument.id  %>
        <%= f.hidden_field :username , value: current_user.username  %>
			 <%#= nil.check %>
        <div class="field">
          <div class="control">
            <%= f.input :comment, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>
          <div class="field">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
            <%= link_to 'Cancel', instruments_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>
