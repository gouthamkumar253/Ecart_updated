<% content_for :header do %>
<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Browse the latest instruments on Saptaswaram
      </h1>
      <%= link_to 'Download as .xlsx', instruments_path(format: :xlsx) %>

    </div>
  </div>
</section>
<% end %>

  <div class="field is_grouped">
    <%= form_tag instruments_path, :remote=> true, :method => 'get', :id => "instruments_search" do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>
    

    <%= form_tag instruments_path, :remote=>true, :method =>'get', :id => "sort_form" do %>
      <div class="columns">
          <div class="field column is-4">
            <div class="control">
              <label class="label">Brand</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= select_tag "sort_brand", options_for_select(Instrument::BRAND), prompt: "Select brand" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-tag"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Finish</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= select_tag "sort_finish", options_for_select(Instrument::FINISH), prompt: "Select finish" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>

          <div class="field column is-4">
            <div class="control">
              <label class="label">Condition</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= select_tag "sort_condition", options_for_select(Instrument::CONDITION), prompt: "Select condition" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-paint-brush"></i>
                </span>
              </div>
            </div>
           </div>
         </div>

    <%end %>


    




    <%#= link_to 'Show', instruments_path, remote: true %>
  </div>


<div id="instruments_lister">

  <%= render 'instruments' %>
</div>