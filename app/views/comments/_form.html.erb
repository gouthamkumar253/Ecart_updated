<div class="columns">
  <div class="column is-8 is-centered">
    <%= simple_form_for @comment, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

      


          <div class="field column is-9">
            <div class="control">
              <%= f.input :username , required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>
		
				<%= hidden_field_tag "instrument_id", @id  %>
			
        
Instrument_id: <%= @id %>
        <div class="field">
          <div class="control">
            <%= f.input :comment, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>
        



        <div class="field">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
            <%= link_to 'Cancel', instruments_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>
